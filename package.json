{
  "name": "cryptos-coffre-desktop",
  "productName": "Cryptos Coffre",
  "version": "1.0.1",
  "description": "Coffre-Fort Numérique Sécurisé - Application Desktop",
  "author": "Cryptos Services <contact@cryptos-services.com>",
  "license": "MIT",
  "homepage": "https://github.com/cryptos-services/cryptos-coffre-desktop#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cryptos-services/cryptos-coffre-desktop.git"
  },
  "bugs": {
    "url": "https://github.com/cryptos-services/cryptos-coffre-desktop/issues"
  },
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "build:win": "npm run build && electron-builder --win --x64",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:all": "npm run build && electron-builder --win --mac --linux",
    "pack": "electron-builder --dir",
    "copy-web": "node scripts/copy-web-build.js",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.3",
    "electron-updater": "^6.1.7",
    "qrcode": "1.5.4",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/qrcode": "1.5.6",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  },
  "build": {
    "appId": "com.cryptos-services.vault",
    "productName": "Cryptos Coffre",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "dist/**/*",
      "dist-web/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resources/icons/icon.ico",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "resources/icons/icon.icns",
      "category": "public.app-category.finance",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "resources/icons/icon.png",
      "category": "Utility",
      "maintainer": "Cryptos Services"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Cryptos Coffre"
    },
    "publish": {
      "provider": "github",
      "owner": "cryptos-services",
      "repo": "cryptos-coffre-desktop"
    }
  }
}
